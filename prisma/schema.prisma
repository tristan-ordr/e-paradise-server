generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  plants    Plant[]
}

model Plant {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  description String
  cost        String
  createdAt   DateTime @default(now())
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
